@model IEnumerable<VirtualWellnessProgram.Models.ExerciseAlert>

@{
    ViewBag.Title = "Index";
}

<h2>Confirm or Deny These Alerts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VigorousGoal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModerateGoal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.currentVigorous)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.currentModerate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Read)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VigorousGoal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModerateGoal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.currentVigorous)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.currentModerate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Read)
        </td>
        <td>
            @Html.ActionLink("Confirm", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Deny", "DenyEdit", new { id=item.Id }) |
          
        </td>
    </tr>
}

</table>
