@model VirtualWellnessProgram.Models.ExerciseAlert

@{
    ViewBag.Title = "Edit";
}

<h2>Approve Exercise Alert</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Check the box and hit submit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.VigorousGoal)
        @Html.HiddenFor(model => model.currentVigorous)
        @Html.HiddenFor(model => model.ModerateGoal)
        @Html.HiddenFor(model => model.currentModerate)
        @Html.HiddenFor(model => model.CustomerFirstName)
        @Html.HiddenFor(model => model.CustomerLastName)
        @Html.HiddenFor(model => model.CustomerId)
        @Html.HiddenFor(model => model.Group)

        <div class="form-group">
            @Html.LabelFor(model => model.Read, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Read)
                    @Html.ValidationMessageFor(model => model.Read, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
